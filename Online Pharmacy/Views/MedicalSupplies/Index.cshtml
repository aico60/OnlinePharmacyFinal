@model IEnumerable<Online_Pharmacy.Models.MedicalSupply>

@{
    ViewData["Title"] = "Index";
}

<h1>Medical Supplies </h1>

<p>
    @if (User.IsInRole("Admin") || User.IsInRole("User"))
    {
        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usage)
            </td>
            <td>
                @if (User.IsInRole("Admin") || User.IsInRole("User"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> <text>|</text>
                }
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                @if (User.IsInRole("Admin") || User.IsInRole("User"))
                {
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> <text>|</text>
                }
                <a asp-action="Buy" asp-route-id="@item.Id">Buy</a>
            </td>
        </tr>
}
    </tbody>
</table>
